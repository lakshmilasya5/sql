SELECT product_id,
       SUM(CASE WHEN DATE_FORMAT(order_date, '%Y-%m') = '2025-01' THEN amount ELSE 0 END) AS Jan_2025,
       SUM(CASE WHEN DATE_FORMAT(order_date, '%Y-%m') = '2025-02' THEN amount ELSE 0 END) AS Feb_2025,
       SUM(CASE WHEN DATE_FORMAT(order_date, '%Y-%m') = '2025-03' THEN amount ELSE 0 END) AS Mar_2025
FROM OrderItems oi
JOIN Orders o ON oi.order_id = o.order_id
GROUP BY product_id;
